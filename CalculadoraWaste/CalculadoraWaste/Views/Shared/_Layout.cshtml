            </div>
            <div class="center">
                <label style="font-size:x-large; color:black; text-transform:uppercase; font-weight:bold">Calculadora Waste</label>
            </div>
        </div>
    </nav>
    <div class="container" style="min-height: 850px;">
        @RenderBody()
    </div>
    <footer class="page-footer grey lighten-1">
        <div class="footer-copyright">
            <div class="container">
                © 2020 Desenvolvida e mantida por Leleo Knight
                <a class="grey-text text-lighten-4 right" href="https://github.com/leonardotonetti/calculadora-waste-tibia">
                    <img class="responsive-img" src="src/images/gitgubmark.jpg"/>
                </a>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
